---
import Link from '../Link.astro'
const landscape_url = import.meta.env.PUBLIC_LANDSCAPE_IMAGE_URL
const me_url = import.meta.env.PUBLIC_ME_IMAGE_URL
---
<section id="hero" class='h-3/4 section-component flex flex-col items-center overflow-visible md:flex-row'>
  <div
    class=`hero_parrallax bg-[url('https://andergcp.s3.amazonaws.com/public/landscape.webp')] h-full w-full bg-fixed bg-bottom bg-cover`
  >
    <div class="flex flex-col pb-20 pt-24 px-section space-y-2 md:space-y-0 md:space-x-4 md:pt-[150px] md:pb-[50px] md:flex-row">
      <div class="w-full mx-auto max-w-[350px] md:mx-0 md:relative md:w-1/3">
        <div class="me-image min-h-fit border-4 border-white shadow-2xl md:absolute md:border-[10px]">
          <div class="border-[1px] border-gray min-h-fit">
            <img src=`${me_url}` alt="Anderson Castiblanco">
          </div>
        </div>
      </div>
      <div class="md:w-2/5 overflow-visible">
        <h1 class="text-main-title text-4xl font-black md:text-6xl">Anderson Castiblanco</h1>
        <h2 class="text-titles-light text-xl font-medium pt-2">Desarrollador de Software - Fullstack</h2>
        <div class="py-2 flex items-center flex-col md:flex-row">
          <span class="uppercase text-titles-light flex-grow basis-0"><strong class="text-titles-light">anterior:</strong> mid-software Developer en Pandas App</span>
          <Link href="#experience">Ver más</Link>
        </div>
        <div class="pt-2 flex items-center flex-col md:flex-row">
          <span class="uppercase text-titles-light flex-grow basis-0"><strong class="text-titles-light">educación:</strong> Universidad de los Andes</span>
          <Link href="#education">Ver más</Link>
        </div>
      </div>
    </div>
  </div>
<section/>